	<groupId>io.open-sphere.suite</groupId>
	<artifactId>suite</artifactId>
	<packaging>jar</packaging>

	<name>${application.display.name} Launch Suite</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<index>true</index>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>io.opensphere.core.appl.OpenSphere</mainClass>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<Application-Name>OpenSphere Desktop</Application-Name>
							<Permissions>all-permissions</Permissions>
						</manifestEntries>
						<addMavenDescriptor>false</addMavenDescriptor>
						<index>false</index>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

